<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/message_box">


        <RelativeLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            
            
            <ImageView
                android:id="@+id/item_message_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/item_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_message_img"
                android:layout_below="@id/item_message_name"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:gravity="left"
                android:text="项目中我是任意复杂的原ContentItem布局" />
            <TextView
                android:id="@+id/item_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_message_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:gravity="right"
                android:text="项C布局" />
            <TextView
                android:id="@+id/item_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="11sp"
                android:gravity="left"
                android:text="ashdggfb" />

        </RelativeLayout>


        <!-- 以下都是侧滑菜单的内容依序排列 -->


        <Button
            android:id="@+id/btnDelete"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/item_msg_delete"
            android:bottomRightRadius="22dp"
            android:text="删除"
            android:textColor="@android:color/white"
            android:topRightRadius="22dp" />
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</LinearLayout>
