<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_tree"
        android:layout_marginLeft="5dp">
        <TextView
            android:textColor="#FF444444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="帖子标题"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/hole_title">
        </TextView>
        <ImageView
            android:id="@+id/hole_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/anonymous_tree"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="7dp"></ImageView>
        <TextView
            android:id="@+id/hole_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF666666"
            android:layout_toRightOf="@id/hole_head"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:text="昵称"
            android:layout_marginLeft="5dp">

        </TextView>
        <TextView
            android:id="@+id/hole_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="#FF888888"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="2021-4-20"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="6dp">

        </TextView>
    </RelativeLayout>

</RelativeLayout>