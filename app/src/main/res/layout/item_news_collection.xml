<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="76dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:layout_centerVertical="true"
    android:background="@drawable/news_header">



    <TextView
        android:id="@+id/news_header_intop"
        android:layout_width="27dp"
        android:layout_height="14sp"
        android:layout_above="@id/news_header_title"
        android:text="官方"
        android:textSize="10sp"
        android:textColor="@color/write"
        android:background="@drawable/official_background"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="14dp"/>

    <TextView
        android:id="@+id/news_header_official"
        android:layout_width="27dp"
        android:layout_height="14sp"
        android:layout_above="@id/news_header_title"
        android:text="官方"
        android:textSize="10sp"
        android:textColor="@color/write"
        android:background="@drawable/official_background"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@id/news_header_intop"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginStart="10dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/news_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空闲教室"
        android:textColor="@color/title"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="14dp"
        android:layout_toStartOf="@+id/news_img"
        />


    <TextView
        android:id="@+id/news_header_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/news_header_title"

        android:ellipsize="end"
        android:textColor="@color/title"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:layout_marginBottom="8dp"
        android:text="由于原因，部分教室不再开放预约通道，先......"
        android:textSize="10sp"
         />





</RelativeLayout>
