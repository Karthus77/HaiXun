<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SquareFragment">

    <RelativeLayout
        android:id="@+id/square_topBar"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/topbar">


        <View
            android:id="@+id/news_btn0"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/haixun"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp" />

        <Button
            android:id="@+id/news_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/collect"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:id="@+id/news_btn2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/messege"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/news_btn"  />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/fragmentsBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/background_box22"
        android:layout_below="@id/square_topBar"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/square_wall"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_width="53.33dp"
                android:src="@drawable/wall_icon">

            </ImageView>
        <ImageView
            android:id="@+id/square_carpool"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="53.33dp"
            android:src="@drawable/carpool_icon">

        </ImageView>
        <ImageView
            android:id="@+id/square_table"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="53.33dp"
            android:src="@drawable/table_icon">

        </ImageView>
        <ImageView
            android:id="@+id/square_treehole"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="53.33dp"
            android:src="@drawable/treehole_icon">

        </ImageView>
        <ImageView
            android:id="@+id/square_bullshit"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:layout_width="53.33dp"
            android:src="@drawable/bullshit_icon">

        </ImageView>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragmentsBar"
        android:id="@+id/squareChild_fragment">
        <ImageView
            android:id="@+id/publish_square"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/publish_news"
            android:layout_marginBottom="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp">
        </ImageView>
    </RelativeLayout>


</RelativeLayout>