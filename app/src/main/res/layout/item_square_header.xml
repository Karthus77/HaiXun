<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_square_detials"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/square_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@color/blue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/square_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/square_photo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:padding="2dp"
            android:text="sflknsf"
            android:textSize="16sp"
            android:textColor="@color/title"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/square_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/square_writer"
            android:layout_toRightOf="@id/square_photo"
            android:layout_marginLeft="6dp"
            android:padding="2dp"
            android:text="2021-5-4"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="arnhguibr\n\nebguargnr\n\ngnnrnrgnann"
        android:layout_marginTop="6dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="16dp"
        />


</LinearLayout>
