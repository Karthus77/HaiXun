<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/circle_layout"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:id="@+id/circle_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/circleItem_topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="38dp"
                android:layout_height="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="#FFE57F"
                android:text="校友圈"
                android:textColor="@color/write"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/circle_userHead"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/circle_userdefault">

            </ImageView>

            <ImageView
                android:id="@+id/circle_rank"
                android:layout_width="17.33dp"
                android:layout_height="17.33dp"
                android:layout_marginLeft="30dp"

                android:layout_marginTop="40dp">

            </ImageView>

            <TextView
                android:id="@+id/circle_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.67dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@id/circle_userHead"
                android:text="用户名"
                android:textColor="#444444"
                android:textSize="12sp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/textView2"
                app:srcCompat="@drawable/delete"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/circle_postTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_userName"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="0.67dp"
                android:text="2021-4-13 12:10"
                android:textColor="#666666"
                android:textSize="8sp"></TextView>

            <TextView
                android:id="@+id/circleItem_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circle_rank"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25.67dp"
                android:text="帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子的内容帖子内容帖子的内"
                android:textColor="#444444"
                android:textSize="10.67sp">

            </TextView>

            <TextView
                android:id="@+id/xq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/circleItem_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9.67dp"
                android:text="详情>"
                android:textColor="#888888"
                android:textSize="10sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="#E8E8E8"></TextView>

            <com.yanzhenjie.recyclerview.SwipeRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>